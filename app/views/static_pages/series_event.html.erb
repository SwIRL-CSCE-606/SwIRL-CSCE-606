<!DOCTYPE html>
<html>

<head>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
    body {
        background-color: #e2c9be;
        background-image: linear-gradient(315deg, #e2c9be 0%, #fbf7e9 74%);
        background-size: cover;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Arial', sans-serif;
    }

    .event-card {
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s;
    }

    .event-card:hover {
        transform: translateY(-10px);
    }

    .gradient-btn {
        background: linear-gradient(45deg, #4CAF50, #44A1F2);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s;
    }

    .gradient-btn:hover {
        background: linear-gradient(45deg, #44A1F2, #4CAF50);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.4);
        transform: translateY(-2px);
    }

    .event-header {
        padding: 30px 20px;
        background-color: #4CAF50;
        color: white;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
        font-size: 2em;
        font-weight: bold;
        letter-spacing: 2px;
    }

    .event-content {
        padding: 30px 20px;
    }

    .highlight-text {
        color: rgb(8, 92, 120);
        padding: 5px 10px;
        border-radius: 10px;
        font-size: 1.5em;
        font-weight: bold;
    }

</style>

    <script>
        // Function to add a new input field
        function addField(fieldType) {
            const container = document.getElementById(`${fieldType}-container`);
            const newField = document.createElement("div");
            newField.innerHTML = `
                <input type="text" class="form-input" name="${fieldType}[]" placeholder="${fieldType}">
                <button type="button" onclick="removeField(this)">Delete</button>
            `;
            container.appendChild(newField);
        }

        // Function to remove the clicked input field
        function removeField(button) {
            const container = button.parentNode.parentNode;
            container.removeChild(button.parentNode);
        }
    </script>
</head>

<body>
<div class="event-card">
    <div class="event-header">
        <h1 align = "center">Skhedule.com</h1>
    </div>
<div class="event-content">
    <h3 align = "center">Series Event Form</h3>
    <p>
        <%= form_with do |f|%>
        <div>
            <%= f.label "Event Name" %>
            <%= f.text_field :name, class: 'form-input' %>
        </div>

        <div id="Event-venue-container">
            <%= f.label "Event Venue" %>
            <%= f.text_field :venue, class: 'form-input' %>
        </div>

        <div id="Event-date-container">
            <%= f.label "Event Date" %>
            <%= f.date_field :Date, class: 'form-input' %>
        </div>

        <div id="Max-capacity-container">
            <%= f.label "Max Capacity" %>
            <%= f.number_field :capacity, in: 0..10000000, step: 1, class: 'form-input' %>
        </div>

        <div id="Start-time-container">
            <%= f.label "Start Time" %>
            <%= f.time_field :timeStart, class: 'form-input' %>
        </div>

        <div id="End-time-container">
            <%= f.label "End Time" %>
            <%= f.time_field :timeEnd, class: 'form-input' %>
        </div>

        <div id="Duration-container">
            <%= f.label "Duration(minutes)" %>
            <%= f.text_field :duration, class: 'form-input' %>
        </div>

        <div align = "center">
            <%= f.submit "Submit", class: "gradient-btn" %>
            <! -- button class="gradient-btn" type="button" onclick="addField('Duration','End-time', 'Start-time', 'Max-capacity', 'Event-date', 'Event-venue')" -->
        </div>
        <% end %>
    </p>
</div>
</body>

</html>
