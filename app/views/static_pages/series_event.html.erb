<!DOCTYPE html>
<html>

<head>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #e2c9be;
            background-image: linear-gradient(315deg, #e2c9be 0%, #fbf7e9 74%);
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }

        .event-card {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s;
        }

        .event-card:hover {
            transform: translateY(-10px);
        }

        .gradient-btn {
            background: linear-gradient(45deg, #4CAF50, #44A1F2);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s;
        }

        .gradient-btn:hover {
            background: linear-gradient(45deg, #44A1F2, #4CAF50);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.4);
            transform: translateY(-2px);
        }

        .event-header {
            padding: 30px 20px;
            background-color: #4CAF50;
            color: white;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
            font-size: 2em;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .event-content {
            padding: 30px 20px;
        }

        .highlight-text {
            color: rgb(8, 92, 120);
            padding: 5px 10px;
            border-radius: 10px;
            font-size: 1.5em;
            font-weight: bold;
        }
    </style>
</head>

<body>
<div class="event-card">
    <div class="event-header">
        <h1 align="center">Skhedule.com</h1>
    </div>
    <div class="event-content">
        <h3 align="center">Series Event Form</h3>
        <p>
            <%= form_with do |f|%>
            <div>
                <%= f.label "Event Name" %>
                <%= f.text_field :name, class: 'form-input', required: true %>
            </div>

            <div id="Event-venue-container">
                <%= f.label "Event Venue" %>
                <%= f.text_field :venue, class: 'form-input', required: true %>
            </div>

            <div id="date-time-pairs">
                <div>
                    <label>Date:</label>
                    <input type="date" class="form-input" name="date[]" required>
                </div>
                <div>
                    <label>Start Time:</label>
                    <input type="time" class="form-input" name="startTime[]" required>
                </div>
                <div>
                    <label>End Time:</label>
                    <input type="time" class="form-input" name="endTime[]" required>
                </div>
            </div>
            <button type="button" onclick="addDateTimePair()">Add Date-Time Pair</button>

            <div>
                <%= f.label "Upload CSV File" %>
                <%= f.file_field :csv_file, class: 'form-input', required: true, accept: ".csv" %>
            </div>

            <div align="center">
                <%= f.submit "Submit", class: "gradient-btn" %>
                <a href="javascript:history.back()" class="gradient-btn">Back</a>
            </div>
            <% end %>
        </p>
    </div>
</div>

<script>
    // Function to add a new date-time pair
    function addDateTimePair() {
        const container = document.getElementById("date-time-pairs");
        const newPair = document.createElement("div");
        newPair.innerHTML = `
            <div>
                <label>Date:</label>
                <input type="date" class="form-input" name="date[]" required>
            </div>
            <div>
                <label>Start Time:</label>
                <input type="time" class="form-input" name="startTime[]" required>
            </div>
            <div>
                <label>End Time:</label>
                <input type="time" class="form-input" name="endTime[]" required>
            </div>
            <button type="button" onclick="removeDateTimePair(this)">Remove</button>
        `;
        container.appendChild(newPair);
    }

    // Function to remove the clicked date-time pair
    function removeDateTimePair(button) {
        const container = button.parentNode.parentNode;
        container.removeChild(button.parentNode);
    }

    // Validate the date and time
    document.querySelector("form").addEventListener("submit", function (event) {
        const dateInputs = document.querySelectorAll('input[type="date"]');
        const timeStartInputs = document.querySelectorAll('input[name="startTime[]"]');
        const timeEndInputs = document.querySelectorAll('input[name="endTime[]"]');

        for (let i = 0; i < dateInputs.length; i++) {
            const date = new Date(dateInputs[i].value);
            const now = new Date();
            if (date < now) {
                event.preventDefault();
                alert("Date cannot be in the past.");
                return;
            }

            const startTime = new Date(date.toISOString().split("T")[0] + "T" + timeStartInputs[i].value);
            const endTime = new Date(date.toISOString().split("T")[0] + "T" + timeEndInputs[i].value);
            if (endTime <= startTime) {
                event.preventDefault();
                alert("End Time must be after Start Time.");
                return;
            }
        }
    });
</script>
</body>

</html>
