<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Roboto', sans-serif;
            padding: 3em;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .event-card {
            background-color: #fff;
            border: 1px solid #e6e6e6;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin: 1.5em 0;
            width: 85%;
            max-width: 700px;
            transition: transform 0.2s;
            cursor: pointer;
        }

        .event-card:hover {
            transform: scale(1.02);
        }

        .event-header {
            padding: 1.25em 2em;
            background-color: #4a90e2;
            color: white;
            font-size: 1.25em;
            font-weight: 500;
            border-radius: 10px 10px 0 0;
            line-height: 1.5;
        }

        .event-content {
            padding: 1em 2em;
            display: none;
            border-radius: 0 0 10px 10px;
        }

        .attendee {
            border-bottom: 1px solid #e6e6e6;
            padding: 0.75em 0;
        }
    </style>

    <script>
        function toggleEventContent(eventId) {
            var eventContent = document.getElementById("event-content-" + eventId);
            if (eventContent.style.display === "none" || eventContent.style.display === "") {
                eventContent.style.display = "block";
            } else {
                eventContent.style.display = "none";
            }
        }
    </script>
</head>

<body>
    <% @events.each do |event| %>
        <div class="event-card" onclick="toggleEventContent('<%= event.id %>')">
            <div class="event-header">
                <%= event.name %>
            </div>
            <div id="event-content-<%= event.id %>" class="event-content">
                <p><strong>Date:</strong>
                    <%= event.event_info&.date&.strftime('%A, %d %b %Y') %>
                </p>
                <p><strong>Time:</strong>
                    <%= event.event_info&.start_time&.strftime('%H:%M %p') %>
                </p>
                <p><strong>Location:</strong>
                    <%= event.event_info&.venue %>
                </p>

                <%= link_to 'Send Emails', invite_attendees_path(event) %>

                <h4 class="mb-3">Attendees:</h4>
                <ul class="list-unstyled">
                    <% event.attendee_infos.each do |attendee_info| %>
                        <li class="attendee">
                            <strong>
                                <%= attendee_info&.name %>
                            </strong> -
                            Email: <%= attendee_info&.email %><br>
                            Status: <%= attendee_info&.is_attending=="yes" ? '<span class="text-success">Attending</span>'.html_safe : '<span class="text-danger">Not Attending</span>'.html_safe %><br>
                        </li>
                        <% end %>
                </ul>
            </div>
        </div>
        <% end %>

    <div>
         <%= link_to "Back to Home", home_path, class: "gradient-btn", align: "center" %>
    </div>
</body>

</html>