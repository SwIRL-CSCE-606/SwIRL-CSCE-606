<!-- app/views/users/signup.html.erb -->
<h1>Sign Up</h1>

<%= form_with(model: @user, url: signup_path) do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit "Sign Up" %>
<% end %>
